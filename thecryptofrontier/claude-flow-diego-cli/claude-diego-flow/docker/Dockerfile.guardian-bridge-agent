# Dockerfile para Guardian Bridge Agent
FROM node:20-alpine

# Instalar dependências necessárias
RUN apk add --no-cache \
    curl \
    wget \
    tini

# Criar usuário não-root
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

WORKDIR /app

# Copiar arquivos necessários
COPY --chown=nodejs:nodejs package*.json tsconfig.json ./
COPY --chown=nodejs:nodejs guardian-bridge-service.ts ./
COPY --chown=nodejs:nodejs src/ ./src/

# Instalar dependências
RUN npm ci --only=production && \
    npm cache clean --force

# Criar diretórios necessários
RUN mkdir -p logs && \
    chown -R nodejs:nodejs /app

# Mudar para usuário não-root
USER nodejs

# Expor porta
EXPOSE 3011

# Health check
HEALTHCHECK --interval=30s --timeout=3s --retries=3 \
    CMD node -e "process.exit(0)"

# Usar tini para gerenciamento de processos
ENTRYPOINT ["/sbin/tini", "--"]

# Comando padrão
CMD ["npx", "tsx", "guardian-bridge-service.ts"]