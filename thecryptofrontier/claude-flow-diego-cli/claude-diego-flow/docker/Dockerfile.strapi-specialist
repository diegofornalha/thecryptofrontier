# Dockerfile otimizado para Strapi Specialist
FROM node:20-alpine

# Instalar dependências necessárias
RUN apk add --no-cache \
    curl \
    wget \
    git \
    tini

# Criar usuário não-root
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

WORKDIR /app

# Copiar arquivos necessários
COPY --chown=nodejs:nodejs package*.json tsconfig.json ./
COPY --chown=nodejs:nodejs src/ ./src/

# Instalar dependências
RUN npm ci --only=production && \
    npm cache clean --force

# Criar diretórios necessários
RUN mkdir -p logs /workspace && \
    chown -R nodejs:nodejs /app /workspace

# Mudar para usuário não-root
USER nodejs

# Expor porta (se necessário para MCP)
EXPOSE 3007

# Health check
HEALTHCHECK --interval=30s --timeout=3s --retries=3 \
    CMD node -e "process.exit(0)"

# Usar tini para gerenciamento de processos
ENTRYPOINT ["/sbin/tini", "--"]

# Comando padrão
CMD ["npx", "tsx", "src/agents/strapi-specialist-agent.ts"]