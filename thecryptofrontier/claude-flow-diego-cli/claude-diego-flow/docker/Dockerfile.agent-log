# Dockerfile para Agent Log Service
FROM node:20-alpine

# Instalar dependências do sistema
RUN apk add --no-cache curl

# Configurar diretório de trabalho
WORKDIR /app

# Copiar package.json primeiro para cache de dependências
COPY package*.json ./
COPY tsconfig.json ./

# Instalar dependências
RUN npm ci --only=production

# Instalar TypeScript e tsx para execução
RUN npm install typescript tsx @types/node

# Copiar código fonte
COPY src/ ./src/

# Criar usuário não-root para segurança
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

# Dar permissões corretas
RUN chown -R nodejs:nodejs /app
USER nodejs

# Expor porta do agent-log
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:3001/health || exit 1

# Comando padrão
CMD ["npx", "tsx", "/app/src/agents/agent-log-simple-start.ts"]