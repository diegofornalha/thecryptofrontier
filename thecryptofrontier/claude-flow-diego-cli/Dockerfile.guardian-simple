# Dockerfile simplificado para Guardian Unificado
FROM node:20-alpine

WORKDIR /app

# Instalar express
RUN npm install express

# Copiar arquivo do Guardian
COPY guardian-unified-simple.js .

# Expor porta
EXPOSE 3003

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "fetch('http://localhost:3003/health').then(r => process.exit(r.ok ? 0 : 1)).catch(() => process.exit(1))"

# Comando
CMD ["node", "guardian-unified-simple.js"]