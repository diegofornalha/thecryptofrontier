{
  "name": "diego-tools-mcp",
  "version": "2.0.0",
  "description": "DiegoTools - MCP server com ferramentas para automação web, GitHub e Claude integration",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "diego-tools": "build/index.js"
  },
  "files": [
    "build/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/phiz/diego-tools.git"
  },
  "author": "Phiz",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "start:bridge": "node build/mcp-http-bridge.js",
    "start:bridge:dev": "npm run build && npm run start:bridge",
    "docker:bridge": "../../scripts/docker/mcp-bridge-start.sh",
    "execute-tool": "node build/execute-tool.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@modelcontextprotocol/server-github": "^2025.4.8",
    "@modelcontextprotocol/server-puppeteer": "^2025.5.12",
    "@octokit/rest": "^22.0.0",
    "@types/puppeteer": "^5.4.7",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "mem0ai": "^2.1.30",
    "puppeteer": "^24.10.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0-beta.3",
    "@types/cors": "^2.8.17",
    "@types/dockerode": "^3.3.31",
    "@types/eventsource": "^1.1.15",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "puppeteer",
    "web-automation",
    "browser-automation"
  ],
  "license": "MIT"
}
