{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": "Blog posts for The Crypto Frontier"
  },
  "options": {
    "draftAndPublish": true,
    "populateCreatorFields": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "maxLength": 500
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "author": {
      "type": "string",
      "required": false
    },
    "tags": {
      "type": "json"
    },
    "categories": {
      "type": "json"
    },
    "publishedAt": {
      "type": "datetime"
    },
    "seo": {
      "type": "json"
    },
    "readingTime": {
      "type": "integer",
      "min": 1
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
} 